{
  "name": "@scramjet/framework",
  "version": "5.0.0-pre.1",
  "description": "The implementation of scramjet framework",
  "main": "./src/index.ts",
  "scripts": {
    "build": "rm -rf ./build && yarn copy && tsc -p tsconfig.build.json",
    "build:w": "yarn build -w",
    "test": "yarn build && ava",
    "test:w": "concurrently 'yarn build:w' 'sleep 8 && yarn test -w'",
    "bdd": "yarn build && yarn cucumber-js build/bdd/features",
    "dist": "rm -rf ./dist && tsc -p tsconfig.dist.json",
    "lint": "eslint src/ test/ --ext .ts",
    "prepare": "husky install",
    "coverage": "yarn coverage:generate && yarn http-server coverage",
    "coverage:generate": "yarn build && yarn coverage:unit && yarn coverage:bdd && yarn coverage:report",
    "coverage:check": "yarn build && yarn coverage:unit && yarn coverage:bdd && nyc report --check-coverage",
    "coverage:unit": "nyc --silent yarn ava",
    "coverage:bdd": "nyc --silent --no-clean yarn cucumber-js build/bdd/features",
    "coverage:report": "nyc report --reporter=html",
    "copy": "copyfiles -f bdd/features/*.feature build/bdd/features && copyfiles -f test/assets/* build/test/assets"
  },
  "author": "Scramjet <open-source@scramjet.org>",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@cucumber/cucumber": "^8.0.0-rc.1",
    "@types/assert": "^1.5.5",
    "@types/jsdom": "^16.2.13",
    "@types/node": "^15.14.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "assert": "^2.0.0",
    "ava": "^3.15.0",
    "axios": "^0.24.0",
    "concurrently": "^6.2.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.0.0",
    "http-server": "^13.0.2",
    "husky": "^7.0.2",
    "jsdom": "^16.2.13",
    "nyc": "^15.1.0",
    "typedoc": "0.20.28",
    "typedoc-plugin-markdown": "3.4.5",
    "typescript": "^4.3.5"
  },
  "ava": {
    "extensions": [
      "js"
    ],
    "files": [
      "build/test/**/*.js",
      "!build/test/**/helpers"
    ]
  },
  "nyc": {
    "branches": 70,
    "lines": 70,
    "functions": 70,
    "statements": 70,
    "include": "build/src/",
    "exclude": "build/test/**/*.js"
  },
  "private": true,
  "packageManager": "yarn@3.1.0"
}
