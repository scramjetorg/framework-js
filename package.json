{
  "name": "@scramjet/framework",
  "version": "5.0.0-pre.1",
  "description": "The implementation of scramjet framework",
  "main": "./src/index.ts",
  "scripts": {
    "build": "rm -rf ./build && tsc -p tsconfig.build.json",
    "build:watch": "npm run build -- -w",
    "test": "npm run build && ava",
    "test:watch": "concurrently 'npm run build:watch' 'sleep 8 && npm run test -- -w'",
    "dist": "rm -rf ./dist && tsc -p tsconfig.dist.json",
    "coverage": "npm run build && nyc --reporter=html ava",
    "coverage:check": "npm run build && nyc --check-coverage ava",
    "lint": "eslint src/ test/ --ext .ts",
    "prepare": "husky install"
  },
  "author": "Scramjet <open-source@scramjet.org>",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@types/assert": "^1.5.5",
    "@types/node": "^15.14.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "assert": "^2.0.0",
    "ava": "^3.15.0",
    "concurrently": "^6.2.1",
    "eslint": "^8.0.0",
    "husky": "^7.0.2",
    "nyc": "^15.1.0",
    "typedoc": "0.20.28",
    "typedoc-plugin-markdown": "3.4.5",
    "typescript": "^4.3.5"
  },
  "ava": {
    "extensions": [
      "js"
    ],
    "files": [
      "build/test/**/*.js",
      "!build/test/**/helpers"
    ]
  },
  "nyc": {
    "branches": 70,
    "lines": 70,
    "functions": 70,
    "statements": 70,
    "include": "build/src/",
    "exclude": "build/test/**/*.js"
  },
  "private": true,
  "packageManager": "yarn@3.0.2"
}
