{
  "name": "@scramjet/framework",
  "version": "5.0.0-pre.1",
  "description": "The implementation of scramjet framework",
  "main": "./src/index.ts",
  "scripts": {
    "build": "rm -rf ./build && npm run copy && tsc -p tsconfig.build.json",
    "build:w": "npm run build -- -w",
    "test": "npm run build && ava",
    "test:w": "concurrently 'npm run build:w' 'sleep 8 && npm test -- -w'",
    "bdd": "npm run build && npx cucumber-js build/bdd/features",
    "dist": "rm -rf ./dist && tsc",
    "lint": "eslint src/ test/ --ext .ts",
    "prepare": "husky install",
    "coverage": "npm run coverage:generate && npx http-server coverage",
    "coverage:generate": "npm run build && npm run coverage:unit && npm run coverage:bdd && npm run coverage:report",
    "coverage:check": "npm run build && npm run coverage:unit && npm run coverage:bdd && nyc report --check-coverage",
    "coverage:unit": "nyc --silent ava",
    "coverage:bdd": "nyc --silent --no-clean cucumber-js build/bdd/features",
    "coverage:report": "nyc report --reporter=html",
    "copy": "copyfiles -f bdd/features/*.feature build/bdd/features && copyfiles -f test/assets/* build/test/assets"
  },
  "author": "Scramjet <open-source@scramjet.org>",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@cucumber/cucumber": "^8.0.0-rc.1",
    "@types/assert": "^1.5.5",
    "@types/node": "^15.14.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "assert": "^2.0.0",
    "ava": "^3.15.0",
    "concurrently": "^6.2.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.0.0",
    "http-server": "^13.0.2",
    "husky": "^7.0.2",
    "nyc": "^15.1.0",
    "typedoc": "0.20.28",
    "typedoc-plugin-markdown": "3.4.5",
    "typescript": "^4.3.5"
  },
  "ava": {
    "extensions": [
      "js"
    ],
    "files": [
      "build/test/**/*.js",
      "!build/test/**/helpers"
    ]
  },
  "nyc": {
    "branches": 70,
    "lines": 70,
    "functions": 70,
    "statements": 70,
    "include": "build/src/",
    "exclude": "build/test/**/*.js"
  },
  "private": true
}
