{
  "name": "@scramjet/framework",
  "version": "5.0.0-pre.1",
  "description": "The implementation of scramjet framework",
  "main": "./src/index.ts",
  "scripts": {
    "start": "ts-node ./src/index",
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf ./dist",
    "watch": "tsc -b --watch",
    "test": "nyc --reporter=html ava",
    "test:w": "npm run test -- -w",
    "prepack": "LOCAL_PACKAGES=true node ../../scripts/publish.js"
  },
  "author": "Scramjet <open-source@scramjet.org>",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@types/assert": "^1.5.6",
    "@types/node": "^14.14.33",
    "assert": "^2.0.0",
    "ava": "^3.15.0",
    "nyc": "^15.1.0",
    "ts-node": "^9.1.1",
    "typedoc": "0.20.28",
    "typedoc-plugin-markdown": "3.4.5",
    "typescript": "4.1.4"
  },
  "ava": {
    "extensions": [
      "ts",
      "tsx"
    ],
    "files": [
      "**/*.spec.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "private": true
}
