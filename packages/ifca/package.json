{
  "name": "@scramjet/framework-tests",
  "version": "5.0.0-pre.1",
  "description": "Tests intended to run on ",
  "main": "./src/index.ts",
  "scripts": {
    "start": "ts-node ./src/index",
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf ./dist",
    "watch": "tsc -b --watch",
    "test": "tsc lib/*.ts && npm run test:ava",
    "test:ava": "ava",
    "prepack": "LOCAL_PACKAGES=true node ../../scripts/publish.js"
  },
  "author": "Scramjet <open-source@scramjet.org>",
  "license": "AGPL-3.0",
  "dependencies": {
    "@scramjet/framework": "0.1.0-pre.1"
  },
  "devDependencies": {
    "@types/assert": "^1.5.4",
    "@types/node": "^15.3.0",
    "assert": "^2.0.0",
    "ava": "^3.15.0",
    "ts-node": "^9.1.1",
    "typedoc": "0.20.28",
    "typedoc-plugin-markdown": "3.4.5",
    "typescript": "^4.1.4"
  },
  "ava": {
    "extensions": [
      "js",
      "ts",
      "tsx"
    ],
    "files": [
      "**/*.spec.js",
      "**/*.spec.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "private": true
}
