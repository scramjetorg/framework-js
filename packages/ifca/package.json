{
  "name": "@scramjet/framework-tests",
  "version": "5.0.0-pre.1",
  "description": "Tests intended to run on ",
  "main": "./src/index.ts",
  "scripts": {
    "build": "rm -rf ./build && tsc -p tsconfig.build.json",
    "build:watch": "npm run build -- -w",
    "test": "npm run build && ava",
    "test:watch": "concurrently 'npm run build:watch' 'sleep 8 && npm run test -- -w'",
    "dist": "rm -rf ./dist && tsc -p tsconfig.dist.json",
    "coverage": "npm run build && nyc --reporter=html ava"
  },
  "author": "Scramjet <open-source@scramjet.org>",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@types/assert": "^1.5.5",
    "@types/node": "^15.14.2",
    "assert": "^2.0.0",
    "ava": "^3.15.0",
    "nyc": "^15.1.0",
    "ts-node": "^9.1.1",
    "typedoc": "0.20.28",
    "typedoc-plugin-markdown": "3.4.5",
    "typescript": "^4.3.5",
    "concurrently": "^6.2.1"
  },
  "ava": {
    "extensions": [
      "js"
    ],
    "files": [
      "build/**/*.spec.js"
    ]
  },
  "private": true
}
